%div#container
  %div#row
  = form_for [@company, @job] do |f|
    %div#form-horizontal.col-md-6.col-md-offset-3
      = f.label :title
      #form-control= f.text_field :title
      = f.label :description
      #form-control= f.text_field :description
      = f.label :level_of_interest
      #form-control= f.number_field :level_of_interest
      = f.label :city
      #form-control= f.text_field :city
      = f.label :category
      #form-control= f.select :category_id, @categories.map {|c| [c.title, c.id] }
      = link_to "Create New Category", new_company_category_path(@company)
      #form-control= f.submit
