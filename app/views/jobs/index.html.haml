%div.container
  %div.row
    %div.col-md-4.col-md-offset-1
      %h3 Jobs:
      %div.list-group
      - @jobs.each do |key, all_jobs|
        %div.list-group-item
          %h3.list-group-item-heading
            =key
          .list-group-item-text
          -all_jobs.each do |job|
            .list-group-item-text
            %br/
            %strong
              =link_to job.title, company_job_path(job.company, job)
            at 
            =job.company.name
            
          
