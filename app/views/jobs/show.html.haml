%div.container
  %div.row
    %div.form-group.col-md-4.col-md-offset-1
      %h2
        = @job.title
      %br/
      %div.list-group
        %div.list-group-item
          %strong.list-group-item-heading Description: 
          .list-group-item-text=@job.description
          %br/
          %strong.list-group-item-heading Level of Interest: 
          .list-group-item-text=@job.level_of_interest
          %br/
          %strong.list-group-item-heading City: 
          .list-group-item-text=@job.city
          %br/
          %strong.list-group-item-heading Company: 
          .list-group-item-text
            =link_to @job.company.name, company_path(@job.company)
          %br/
          %strong.list-group-item-heading Category: 
          .list-group-item-text
            =@job.category.title
          %br/
          .list-group-item-text.text-right
            =link_to "Edit", edit_company_job_path(@job.company, @job)
            =link_to "Delete", company_job_path(@job.company, @job), method: :delete
        %div.list-group
          %div.list-group-item
            .text-right
              =link_to "New Comment", new_company_job_comment_path(@job.company, @job)
            %h4 Comments:  
            -@comments.each do |comment|
              %div.list-group-item.comment
                =comment.content
            
        
