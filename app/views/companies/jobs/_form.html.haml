%div.container
  %div.row
    %div.col-md-6
      .form-horizontal
      = form_for [@company, @job] do |f|
        %div.form-group
          .form-control
            = f.label :title
            = f.text_field :title

          .form-control
            = f.label :description
            = f.text_field :description

          .form-control
            = f.label :level_of_interest
            = f.number_field :level_of_interest
          
          .form-control

            = f.label :city
            = f.text_field :city

          .form-control
            = f.label :category
            = f.select :category_id, @categories.map {|c| [c.title, c.id] }
            = link_to "Create New Category", new_company_category_path(@company)
          .form-control= f.submit
